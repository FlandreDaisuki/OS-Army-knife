alias cls='clear'

alias apt.install='sudo apt-get install'
_apt_install() {
    local cur
    cur="${COMP_WORDS[COMP_CWORD]}"
    COMPREPLY=( $( apt-cache --no-generate pkgnames "$cur" 2> /dev/null ) )
}
complete -F _apt_install apt.install

alias apt.autoclean='sudo apt-get autoclean'
alias apt.autoremove='sudo apt-get autoremove'
alias apt.update='sudo apt-get update'
alias apt.upgrade='sudo apt-get upgrade'
alias apt.add-ppa='sudo add-apt-repository'

alias apt.remove='sudo apt-get purge'
alias apt.uninstall='apt.remove'
_apt_remove() {
    local cur
    cur="${COMP_WORDS[COMP_CWORD]}"
    if [ -f /etc/debian_version ]; then
    # Debian system
    COMPREPLY=( $( _xfunc dpkg _comp_dpkg_installed_packages $cur ) )
    else
    # assume RPM based
    _xfunc rpm _rpm_installed_packages
    fi
}
complete -F _apt_remove apt.remove

alias unzip.big5='unzip -O cp950'
alias unzip.gb='unzip -O cp936'
alias unzip.jp='unzip -O cp932'
alias unzip.kr='unzip -O cp949'

alias wine.jp='LANG=ja_JP.utf8 wine'
